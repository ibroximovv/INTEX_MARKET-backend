generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  username  String
  password  String
  createdAt DateTime @default(now())
}

model Products {
  id              String      @id @default(uuid())
  Category        Category    @relation(fields: [categoryId], references: [id])
  categoryId      String
  image           String
  price           Int
  quantity        Int
  size            String
  depth           Int
  frame_en        String
  frame_uz        String?
  frame_ru        String?
  status          StatusENum?
  discountedPrice Int?
  createdAt       DateTime    @default(now())
  Orders          Orders[]
}

enum StatusENum {
  OutOfStock
  Recommend
  Sale
  Block
}

model Category {
  id        String     @id @default(uuid())
  name      String     @default("")
  name_en   String?    @unique
  name_uz   String?    @unique
  name_ru   String?    @unique
  Products  Products[]
  createdAt DateTime   @default(now())
}

model Orders {
  id         String   @id @default(uuid())
  name       String
  phone      String
  adress     String
  Products   Products @relation(fields: [productsId], references: [id])
  productsId String
  check      Boolean? @default(false)
  createdAt  DateTime @default(now())
}

model Site {
  id            String   @id @default(uuid())
  phone         String
  adress_en     String
  adress_uz     String?
  adress_ru     String?
  workingHours  String
  telegramLink  String
  instagramLink String
  createdAt     DateTime @default(now())
}
